<%- include('includes/header'); %>
<%- include('includes/nav'); %>


<div style="padding: 5% 20% ">

<% if (!person.person._id) { %>
  <form method="post" action="/person/create">
<% } else { %>
  <form method="post" action="/person/process/<%= person.person._id %>">
<% } %>
  <input type="hidden" name="_csrf" value=<%= csrfToken %>>
    <div class="form-row">
      <div class="form-group col-md-6">
        <label for="inputEmail4">Email</label>
        <input value="<%= person.person.email %>" type="email" class="form-control" id="inputEmail4" name="email">
      </div>
      <div class="form-group col-md-6">
        <label for="inputPassword4">Password</label>
        <input value="<%= person.person.password %>" type="password" class="form-control" id="inputPassword4" name="password">
      </div>
    </div>
    <div class="form-group">
      <label for="inputAddress">CPF</label>
      <input value="<%= person.person.cpf %>" class="form-control" id="inputAddress" placeholder="Apenas números" name="cpf">
    </div>
    <div class="form-group">
      <label for="inputAddress2">Celular</label>
      <input value="<%= person.person.phone %>" type="phone" class="form-control" id="inputAddress2" placeholder="Apenas números" name="phone">
    </div>
    <div class="form-row">
      <div class="form-group col-md-6">
        <label for="inputCity">Nascimento</label>
        <input value="<%= person.person.birthdate %>" type="date" class="form-control" id="inputCity" name="birthdate">
      </div>
      <div class="form-group col-md-6">
        <label for="inputState">Sexo</label>
        <select id="inputState" class="form-control" name="sex">
          <option selected>Escolha...</option>
          <option>Masculino</option>
          <option>Feminino</option>
          <option>Outro</option>
        </select>
      </div>   
    </div>
    <div class="form-group">
      <div class="form-check">
        <input class="form-check-input" type="checkbox" id="gridCheck" name="admin">
        <label class="form-check-label" for="gridCheck">
          Admin
        </label>
      </div>
    </div>
    <button type="submit" class="btn btn-primary"><% if (!person.person._id) { %>
    <%= "Create" %> 
    <% } else { %>
    <%= "Update" %>
    <% } %>
    </button>
  </form>
</div>

<%- include('includes/footer'); %>


